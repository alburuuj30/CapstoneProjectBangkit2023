<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#594040"
    tools:context=".view.wishlist.DetailWishListFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="25dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Button Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Wishlist"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="14dp"

                />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/monas"
            />

        <TextView
            android:id="@+id/namaTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monumen Nasional"
            android:textColor="#37474F"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/viewPager"


            />

        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_on_24"
            android:layout_marginStart="14dp"
            android:layout_below="@id/namaTempat"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/namaLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta, Indonesia"
            android:textColor="#37474F"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:layout_below="@id/namaTempat"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@id/location"


            />

        <TextView
            android:id="@+id/deskripsiWisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monumen Nasional atau Monas adalah monumen peringatan setinggi 132 meter yang dibangun untuk mengenang perjuangan rakyat Indonesia dalam merebut kemerdekaan dari pemerintahan kolonial Belanda."
            android:textColor="#37474F"
            android:textSize="16sp"
            android:layout_marginStart="14dp"
            android:layout_below="@id/namaLokasi"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="14dp"



            />



    </RelativeLayout>

</RelativeLayout>